<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ứng Dụng  Bé Học  Toán"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#f12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#CDECCE">

        <EditText
            android:id="@+id/edt_sothu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#F6D4D1"
            android:hint="nhập số  thứ 1"
            android:textColor="#9C27B0"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_sothu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#F6D4D1"
            android:hint="nhập số  thứ 2"
            android:textColor="#9C27B0"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_ketqua"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Kết Quả: "
            android:textSize="30sp"
            android:textColor="#FF9800"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">
            <Button
                android:id="@+id/btn_phepcong"
                android:layout_width="80dp"
                android:hint="+"
                android:textSize="20sp"
                android:textColor="#FF9800"
                android:layout_height="wrap_content"
                android:backgroundTint="#8F8D89"/>
            <Button
                android:id="@+id/btn_pheptru"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#8F8D89"
                android:hint="-"
                android:textSize="20sp"
                android:textColor="#FF9800"/>
            <Button
                android:id="@+id/btn_phepnhan"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#8F8D89"
                android:hint="*"
                android:textSize="20sp"
                android:textColor="#FF9800"/>
            <Button
                android:id="@+id/btn_phepchia"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#8F8D89"
                android:layout_marginLeft="10dp"
                android:hint="/"
                android:textSize="20sp"
                android:textColor="#FF9800"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>